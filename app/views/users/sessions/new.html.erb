 <%= render "layouts/reg" %>
 <section id="content" class="m-t-lg wrapper-md animated fadeInDown">
     <a class="nav-brand">Salon Objectives</a>
    <div class="row m-n">
      <div class="col-md-4 col-md-offset-4 m-t-lg">
        <section class="panel">
          <header class="panel-heading bg bg-primary text-center">
            Sign in
          </header>


<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'panel-body' }) do |f| %>
 <div class="form-group">
  <%= f.input :email, :autofocus => true %></div>
   <div class="form-group">
  <%= f.input :password %></div>
    <div class="checkbox">
  <%= f.input :remember_me, :as => :boolean, :wrapper => :inline_checkbox if devise_mapping.rememberable? %></div>
  <%= f.button :submit, "Sign in", :class => 'btn btn-info' %>
<% end %>
<%= render "devise/shared/links" %>

